    <build>
        <resources>
            <resource>
                <directory>${project.basedir}</directory>
                <includes>
                    <include>README.md</include>
                    <include>LICENSE</include>
                </includes>
                <targetPath>${project.build.directory}/classes</targetPath>
            </resource>

            <resource>
                <directory>src/main/resources</directory>
            </resource>

            <!-- Externer Ordner "assets" – bleibt als Unterordner erhalten -->
            <resource>
                <directory>assets</directory>
                <!-- so heißt der Ordner im JAR -->
                <targetPath>assets</targetPath>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>

            <!-- Falls "Patterns" NICHT schon unter src/main/resources liegt: -->
            <resource>
                <directory>src/main/resources/Patterns</directory>
                <!-- im JAR direkt unter /Patterns -->
                <targetPath>Patterns</targetPath>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>

        </resources>


